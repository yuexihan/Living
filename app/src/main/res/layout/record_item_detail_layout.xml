<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImage"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_weight="0"
            android:cropToPadding="false"
            android:src="@drawable/profile3" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Raylhuang"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2018-4-11 11:30"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_gravity="end|center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/emoView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitCenter"
                android:src="@drawable/happy" />

            <ProgressBar
                android:id="@+id/emoBar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="6dp"
                android:layout_weight="0"
                android:max="100"
                android:progressDrawable="@drawable/seekbar_bg"
                android:scaleY="5"
                android:visibility="visible" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="0"
        android:text="真的好气啊！hahahahahahahahahahhahahfdafdafdafda"
        android:textSize="15sp"
        android:textColor="#585858"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:gravity="right"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/upButton"
            android:layout_width="28dp"
            android:layout_height="18dp"
            android:layout_weight="0"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:src="@drawable/record_red_heart"
            android:tint="#ff5c4b" />

        <TextView
            android:id="@+id/upCount"
            android:layout_width="24dp"
            android:layout_height="15dp"
            android:layout_weight="0"
            android:text="11"
            android:textColor="#8c8c8c"/>

        <ImageButton
            android:id="@+id/commentButton"
            android:layout_width="28dp"
            android:layout_height="18dp"
            android:layout_weight="0"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:src="@drawable/record_comment"
            android:tint="#8c8c8c" />

        <TextView
            android:id="@+id/commentCount"
            android:layout_width="24dp"
            android:layout_height="15dp"
            android:layout_weight="0"
            android:text="999"
            android:textColor="#8c8c8c"/>

    </LinearLayout>

    <com.tencent.living.MyListView
        android:id="@+id/commentsList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:divider="#00000000"
        android:fadingEdge="none"
        android:focusable="false" />

    <TextView
        android:id="@+id/moreComments"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:layout_weight="0"
        android:paddingBottom="5dp"
        android:text="@string/ground_more_comment_but" />

</LinearLayout>
